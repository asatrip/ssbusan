<!DOCTYPE html>
<html lang="ko">
  <head>
    <%- include('./head') %>
  </head>
  <body>
    <%- include('./header') %>
    <main>
      <section>
        <%- include('./title', { title: `채팅`, info:
        'https://kbike.kr/support/manage/chat', }) %>
        <div class="tableWrap">
          <table>
            <thead>
              <tr>
                <th>날짜</th>
                <th>글쓴이</th>
                <th>쪽지</th>
                <th>수정</th>
                <th>삭제</th>
              </tr>
            </thead>
            <tbody>
              <% chats.forEach(chat => { %>
              <form action="/admin/chat/edit/<%= chat.id %>" method="POST">
                <tr>
                  <td><%= chat.datetime %></td>
                  <td><%= chat.nickName %></td>
                  <td>
                    <input
                      type="text"
                      name="message"
                      value="<%= chat.message %>"
                    />
                  </td>
                  <td><button name="submit" value="edit">수정</button></td>
                  <td><button name="submit" value="delete">삭제</button></td>
                </tr>
              </form>
              <% }) %>
            </tbody>
          </table>
        </div>
      </section>
      <section>
        <form action="/admin/chat/deleteAll" method="POST">
          <div><button>전체 삭제</button></div>
        </form>
      </section>
      <%- include('../pagination') %>
    </main>
  </body>
</html>

<!DOCTYPE html>
<html lang="ko">
  <head>
    <%- include('./head') %>
  </head>
  <body>
    <%- include('./header') %>
    <main>
      <section>
        <%- include('./title', { title: '포인트', info:
        'https://kbike.kr/support/manage/point', }) %>
        <div class="tableWrap">
          <table>
            <thead>
              <tr>
                <th>날짜</th>
                <th>아이디 (닉네임)</th>
                <th>타입</th>
                <th>포인트</th>
              </tr>
            </thead>
            <tbody>
              <% points.forEach(point => { %>
              <tr>
                <td><%= point.datetime %></td>
                <td><%= point.nickName %></td>
                <td><%= point.type %></td>
                <td><%= point.point.toLocaleString() %></td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </section>
      <%- include('../pagination') %>
      <div class="search">
        <form id="download" action="/admin/point/download" method="POST">
          <input type="hidden" name="searchType" value="<%= searchType %>" />
          <input type="hidden" name="keyword" value="<%= keyword %>" />
        </form>
        <form action="/admin/point" method="GET">
          <select name="searchType">
            <option value="nickName">닉네임</option>
            <option value="email">이메일</option>
          </select>
          <input type="text" name="keyword" />
          <button>검색</button>
          <button form="download">다운로드</button>
        </form>
      </div>
    </main>
  </body>
</html>

<!DOCTYPE html>
<html lang="ko">
  <head>
    <%- include('./head') %>
  </head>
  <body>
    <%- include('./header') %>
    <main>
      <section>
        <%- include('./title', {
          title: '섹션 그룹',
          info: 'https://kbike.kr/support/manage/section',
        }) %>
        <div class="tableWrap">
          <table>
            <thead>
              <tr>
                <th rowspan="2">타입</th>
                <th rowspan="2">표시 순서</th>
                <th colspan="3">부가 설명</th>
                <th rowspan="2">수정</th>
                <th rowspan="2">삭세</th>
                <th rowspan="2">표시</th>
                <th rowspan="2">상세</th>
              </tr>
              <tr>
                <th>제목</th>
                <th>내용</th>
                <th>표시</th>
              </tr>
            </thead>
            <tbody>
              <% sectionGroups.forEach(sectionGroup => { %>
                <form action="/admin/sectionGroup/edit/<%= sectionGroup.id %>" method="POST">
                  <tr>
                    <td>
                      <select name="type">
                        <option value="rowTwo"<% if (sectionGroup.type === 'rowTwo') { %> selected<% } %>>2단</option>
                        <option value="rowOne"<% if (sectionGroup.type === 'rowOne') { %> selected<% } %>>1단</option>
                        <option value="tab"<% if (sectionGroup.type === 'tab') { %> selected<% } %>>탭</option>
                        <option value="dropdown"<% if (sectionGroup.type === 'dropdown') { %> selected<% } %>>드롭다운</option>
                        <option value="blog"<% if (sectionGroup.type === 'blog') { %> selected<% } %>>블로그</option>
                        <option value="contentTwo"<% if (sectionGroup.type === 'contentTwo') { %> selected<% } %>>컨텐츠2단</option>
                        <option value="contentOne"<% if (sectionGroup.type === 'contentOne') { %> selected<% } %>>컨텐츠1단</option>
                        <option value="imageAndTitle"<% if (sectionGroup.type === 'imageAndTitle') { %> selected<% } %>>이미지+제목</option>
                        <option value="bookmark"<% if (sectionGroup.type === 'bookmark') { %> selected<% } %>>북마크</option>
                        <option value="side"<% if (sectionGroup.type === 'side') { %> selected<% } %>>사이드</option>
                        <option value="youtube"<% if (sectionGroup.type === 'youtube') { %> selected<% } %>>유튜브</option>
                        <option value="customBanner"<% if (sectionGroup.type === 'customBanner') { %> selected<% } %>>커스텀 배너</option>
                      </select>
                    </td>
                    <td><input type="text" name="viewOrder" value="<%= sectionGroup.viewOrder %>" placeholder="표시 순서"></td>
                    <td><input type="text" name="title" value="<%= sectionGroup.title %>" placeholder="제목"></td>
                    <td><input type="text" name="content" value="<%= sectionGroup.content %>" placeholder="설명"></td>
                    <td><input type="checkbox" name="showTitleAndContent" value="1"<% if (sectionGroup.showTitleAndContent) { %> checked<% } %>></td>
                    <td><button name="submit" value="edit">수정</button></td>
                    <td><button name="submit" value="delete">삭제</button></td>
                    <td><button name="submit" value="status">표시</button></td>
                    <td><a href="/admin/sectionGroup/detail/<%= sectionGroup.id %>"><button type="button">상세</button></a></td>
                  </tr>
                </form>
              <% }) %>
            </tbody>
          </table>
        </div>
      </section>
      <section>
        <%- include('./title', { title: '새로 등록' }) %>
        <div class="tableWrap">
          <table>
            <thead>
              <tr>
                <th>타입</th>
                <th>등록</th>
              </tr>
            </thead>
            <tbody>
              <form action="/admin/sectionGroup/new" method="POST">
                <tr>
                  <td>
                    <select name="type">
                      <option value="rowTwo">2단</option>
                      <option value="rowOne">1단</option>
                      <option value="tab">탭</option>
                      <option value="dropdown">드롭다운</option>
                      <option value="blog">블로그</option>
                      <option value="contentTwo">컨텐츠2단</option>
                      <option value="contentOne">컨텐츠1단</option>
                      <option value="imageAndTitle">이미지+제목</option>
                      <option value="bookmark">북마크</option>
                      <option value="side">사이드</option>
                      <option value="youtube">유튜브</option>
                      <option value="customBanner">커스텀 배너</option>
                    </select>
                  </td>
                  <td><button>등록</button></td>
                </tr>
              </form>
            </tbody>
          </table>
        </div>
      </section>
    </main>
  </body>
</html>
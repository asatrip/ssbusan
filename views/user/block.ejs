<!DOCTYPE html>
<html lang="ko">
  <head>
    <%- include('../head') %>
    <meta
      property="og:url"
      content="<%= setting.siteDomain %>/mypage/article"
    />
    <link rel="canonical" href="<%= setting.siteDomain %>/mypage/article" />
    <link rel="stylesheet" href="/stylesheets/user/user.css" />
  </head>
  <body>
    <%- include('../commons') %> <%- include('../header') %>
    <main>
      <%- include('../aside', { mobile: false }) %>
      <article id="block">
        <%- include('../banner', { position: 'indexTop' }) %>
        <%- include('../banner', { position: 'articleTop' }) %> 
        <%- include('./header') %> <%- include('../title', { title:
        lang.user_blockUsers }) %>
        <section id="item">
          <div class="items">
            <% users.forEach(user => { %>
            <div class="item">
              <div class="main"><%= user.uId %> (<%= user.nickName %>)</div>
              <div class="info">
                <form action="/mypage/block" method="POST">
                  <input
                    type="hidden"
                    name="targetUserId"
                    value="<%= user.targetUserId %>"
                  />
                  <button><%= __('user_unblock') %></button>
                </form>
              </div>
            </div>
            <% }) %>
          </div>
        </section>
        <%- include('../pagination') %>
      </article>
      <%- include('../aside', { mobile: true }) %>
    </main>
    <%- include('../footer') %>
  </body>
</html>

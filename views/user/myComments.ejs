<!DOCTYPE html>
<html lang="ko">
  <head>
    <%- include('../head') %>
    <meta
      property="og:url"
      content="<%= setting.siteDomain %>/mypage/article"
    />
    <link rel="canonical" href="<%= setting.siteDomain %>/mypage/article" />
    <link rel="stylesheet" href="/stylesheets/user/user.css" />
  </head>
  <body>
    <%- include('../commons') %> <%- include('../header') %>
    <main>
      <%- include('../aside', { mobile: false }) %>
      <article id="comment">
        <%- include('../banner', { position: 'indexTop' }) %>
        <%- include('../banner', { position: 'articleTop' }) %> 
        <%- include('./header') %> <%- include('../title', { title:
        lang.user_myComments }) %>
        <section id="item">
          <div class="items">
            <% comments.forEach(comment => { %>
            <div class="item">
              <div class="main">
                <a
                  href="/<%= comment.boardSlug %>/<%= comment.articleSlug %>"
                  class="content"
                  ><%= comment.content %></a
                >
              </div>
              <div class="info">
                <div class="datetime"><%= comment.datetime %></div>
              </div>
            </div>
            <% }) %>
          </div>
        </section>
        <%- include('../pagination') %>
      </article>
      <%- include('../aside', { mobile: true }) %>
    </main>
    <%- include('../footer') %>
  </body>
</html>
